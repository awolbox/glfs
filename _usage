_usage()
{
		_version
		echo "
		;Usage:
		;    $(basename $0) [Options] SRCBUILD...
		;	
		;Options:
		;    -q, --query    read SRCBUILD information
		;    -s, --silent   do not prompt the user
		;    -v, --version  show version information
		;    -h, --help     display this help screen
		;	
		;Author: awol <awol@member.fsf.org>\
		" | cut -d ";" -f 2
}

